<!-- its inside this products of views we can group things products in there just in case if we were to have multiple products -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Farms</title>
</head>
<body>
    <h1>All Farms</h1>
    <ul>
        <!-- loop -->
        <% for(let farm of farms){%>
            <li><a href="/farms/<%=farm._id%> "><%= farm.name %></a></li>
           <% } %> 
    </ul>
    <form action="/farms/new">
        <button>
              Add A Farm
            </button>
        </form>
            
</body>
</html>